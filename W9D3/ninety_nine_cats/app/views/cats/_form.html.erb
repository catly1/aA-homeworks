<h1>Cats#edit</h1>

<h1>Update Cat</h1>
<form action="<%= cat_url %>" method="post">

<input type="hidden" name="_method" value="PATCH">

<label for="cat_name">Name</label>
<input 
    id="cat_name" 
    type="text" 
    name="cat[name]"
    value="<%= @cat.name %>">
<br>
<br>
<label for="cat_birth_date">Birth date</label>
<input
    type="date"
    name="cat[birth_date]"
    id="cat_birth_date"
    value="<%= @cat.birth_date %>">
<br>
<br>
<label for="cat_color">Color</label>
<select id="cat_color" name="cat[color]">
    <option disabled>-- select a color --</option>
    <%Cat::COLORS.each do |color|%>
        <option value="<%= color%>" <%= @cat.color == color ? "selected" : ""%>><%= color%></option>
    <%end%>
</select>
<br>
<br>
<label for="cat_sex">Sex</label>
<select id="cat_sex" name="cat[sex]">
    <option disabled>-- Please Select --</option>
    <option value="M" <%= @cat.sex == "M" ? "selected" : ""%>>Male</option>
    <option value="F" <%= @cat.sex == "F" ? "selected" : ""%>>Female</option>
</select>
<br>
<br>
<label for="cat_description">Description</label>
<br>
 <textarea 
    id="cat_description" 
    type="text" 
    name="cat[description]"
    ><%= @cat.description %></textarea>
<br>
<br>
    <input type="submit" value="Update cat!">
</form>
